<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_header">

        <EditTextPreference
            app:key="latitude"
            app:title="@string/Latitude_title"
            app:useSimpleSummaryProvider="true"
            />

        <EditTextPreference
            app:key="longitude"
            app:title="@string/Longitude_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:key="siteName"
            app:title="Site Name"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="refresh"
            app:title="@string/Refresh_title"
            app:useSimpleSummaryProvider="true" />



    </PreferenceCategory>



</PreferenceScreen>